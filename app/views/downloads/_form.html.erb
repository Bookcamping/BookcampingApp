<%= simple_form_for [reference, download] do |form| %>
  <%= form.input :name %>
  <%= form.input :description %>
  <div class="upload">
    <fieldset>
      <%= form.input :remote_file_url %>
    </fieldset>
    <fieldset>
      <%= form.input :file %>
    </fieldset>
  </div>
  <%= admin_area do %>
    <%= form.input :content_type %>
  <% end %>
  <%= form.submit %>
<% end %>
<%= simple_debug download.errors %>
