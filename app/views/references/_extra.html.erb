<p class="download important">¿Lo quieres? ¡Lo tienes!</p>
<% if reference.downloads.size > 0 %>
  <div class="downloads">
    <%= render reference.downloads %>
  </div>
<% end %>

<% if reference.urls? %>
  <div class="urls">
    <% reference.urls.each do |url| %>
      <a href="<%= url %>">
        <%= url_description(reference, url) %>
      </a>
    <% end %>
  </div>
<% end %>
<br>
<div class="shelves small">
  <%= render partial: 'shelves/item', collection: reference.shelves,
    as: :shelf, locals: { reference: reference } %>
</div>
<% if reference.tags? %>
  <div class="tags">
    <%= icon(:tags) %><%= render reference.tags %>
  </div>
<% end %>
