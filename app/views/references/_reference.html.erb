<%= div_for reference, style: "background-color: #{reference_color(defined?(shelf) ? shelf : nil)}", class: reference.ref_type do %>
  <div class="content">
  <div class="info">
    <h3><%= link_to reference.title, [reference] %></h3>
    <div class="more"><%= reference.date %> <%= reference.authors %> <%= reference.editor %></div>
  </div>
 </div>
 <% end %>
