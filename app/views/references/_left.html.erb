<table class="shelves small">
  <%= render reference.shelf_items %>
</table>

<% if reference.repubbed? || reference.downloads_count > 0 %>
  <h3 class="important download">&dArr; ¿Lo quieres? ¡Lo tienes! &dArr;</h3>
<div class="action_list">
  <% reference.downloads.each do |download| %>
    <%= link_to_download download %>
<% end %>
  <% if reference.repubbed? %>
    <%= link_to icon('eye-open', 'Leer'), [reference, :repub] %>
  <%= link_to icon('download', 'Descargar .pdf'), [reference, :repub] %>
  <%= link_to icon('link', 'Ir a la fuente'), reference.url, 
    target: '_blank' %>
<% end %>
  </div>
<% end %>

