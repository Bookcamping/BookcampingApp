<% title reference.title %>
<%= content_tag_for :article, reference, class: reference.ref_type do %>
  <div class="header">
  <div class="actions">
    <%= link_to 'Editar', [:edit, reference] if can? :edit, reference %>
    <%= link_to 'Borrar', reference, method: :delete,
      data: { confirm: '¿Segura?', action: 'delete-reference' } if can? :delete, reference %>
  </div>
    <div class="icon">
      <%= image_tag "references/#{reference.ref_type.downcase}_small.png", alt: reference.ref_type %>
    </div>
    <h1><%= link_to reference.title, reference %></h1>
    <div class="info">
      <%= license_icon_tag reference.license %>
      <%= reference.date %>
      <%= reference.authors %>
      <% if reference.editor? %>
        / <%= reference.editor %>
  <% end %>
    </div>
    <div class="tags">
      <%= render reference.tags %>
    </div>
  </div>
  <div class="media">
    <%= render_media(reference) if reference.media? %>
  </div>
  <div class="description"><%= markdown reference.description %></div>

  <% if reference.url? && reference.license.libre? %>
    <div class="download_url">
    <%= link_to(raw(t("references.downloads.#{reference.ref_type}")),
                reference.url, target: '_blank', class: 'important download') %>
            </div>
            <% end %>
              <div class="comments">
                <%= render reference.comments %>
              </div>

              <%= content_for :right do %>
                <div class="black">
                <div class="shared">
                  Compartido por <%= link_to reference.user.name, reference.user %>
                <%= link_to avatar_img(reference.user, 80), reference.user %>
                  <% if reference.created_at? %>
                    Hace <%= time_ago_in_words reference.created_at %>
              </div>
              <% end %>
              </div>
              <div class="curtain"></div>
              <div class="social_actions">
                <% if current_user %>
                  <% recommendation = current_user.recommendation(reference) %>
                <% if recommendation.present? %>
                  <%= link_to icon(:heart, t('app.unrecommend')), recommendation,
                    method: :delete, data: { action: 'unrecommend',
                                             confirm: '¿Quieres dejar de recomendarlo?' } %>
                                         <% else %>
                                               <%= link_to icon('heart-empty', t('app.recommend')), recommendations_path(r: reference),
                                                 method: :post, data: { action: 'recommend' } %>
                                             <% end %>
                                               <% end %>
                                                 <%= link_to icon(:twitter, t('app.tweet')), "https://twitter.com/share?url=#{request.url}", target: '_blank' %>
                                               </div>
                                             <% end %>

                                               <%= content_for :left do %>
                                                 <table class="shelves small">
                                                 <%= render reference.shelves %>
                                               </table>
                                             <% end %>
                                             <% end %>
