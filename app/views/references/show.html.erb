<% title reference.title %>
<%= content_tag_for :article, reference, 
  class: reference_css_class(reference) do %>
  <%= render 'header' %>

  <div class="row">
    <% media = render_media(reference) %>
    <% if !reference.cover? && media.iframe? %>
      <div class="fitvideo span10">
        <%= media.html %>
      </div>
    <% end %>
    <div class="span7">
      <% if reference.cover? %>
        <div class="media">
          <%= image_tag reference.cover.main.url %>
        </div>
      <% elsif !media.iframe? %>
        <div class="media">
          <%= media.html %>
        </div>
      <% end %>
      <div class="description">
        <%= markdown reference.description %>
      </div>

      <div class="comments">
        <%= render reference.comments %>
      </div>

      <div class="visits">
        <% reference.shelf_items.each do |item| %>
          <%= render 'shelf_items/visit', item: item if item.shelf.guide? %>
        <% end %>
      </div>
    </div>
    <div class="span3">
      <%= render 'left' %>
    </div>
  </div>
<% end %>

<%= content_for :left do %>
  <%= render 'right' %>
<% end %>

