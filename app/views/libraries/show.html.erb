<% title library.name %>
<%= div_for library do %>
  <div class="header">
  <div class="count"><%= library.shelves.count %></div>
  <h1><%= link_to library.name, root_path %></h1>
</div>

<table class="shelves">
  <%= render library.shelves %>
</table>

<%= content_for :social do %>
<div class="actions">

  <%= link_to 'Editar', [:edit, library] if can? :update, library %>
</div>
<% end %>
<%= content_for :description do %>
  <div class="right arrow-button">
    <div class="img left">&nbsp;</div>
    <div class="img right">&nbsp;</div>
    <div class="content">
      <%= link_to 'AÃ±adir lista' %>
    </div>
  </div>
  <div class="hand"></div>

  <div class="black">
  <article class="description">
    <%= markdown library.description %>
  </article>
</div>
<div class="curtain"></div>
<% end %>
<% end %>
