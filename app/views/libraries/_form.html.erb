<%= simple_form_for library do |form| %>
  <%= form.input :name %>
  <%= form.input :slug %>
  <%= form.input :ltype, collection: tc('libraries.ltypes', Library::LTYPES), include_blank: false %>
  <%= form.input :shelf_name %>
  <%= form.input :description, as: :text %>
  <%= form.input :logo %>
  <%= form.input :fixed_shelf_order, wrapper: :checkbox %>
  <%= admin_area do %>
    <%= form.input :protected, wrapper: :checkbox %>
    <%= form.input :user_id %>
  <% end %>
  <%= form.submit %>
<% end %>
<%= simple_debug library %>
