<div class="header">
  <%= title "Editar perfil" %>
  <%= link_to t('app.cancel'), user %>
</div>

<%= simple_form_for user do |form| %>
  <%= form.input :name %>
<%= form.input :email %>
<%= form.input :twitter %>
<%= form.input :description, as: :text %>
<%= form.input :avatar %>
<h5>Emails de actividad</h5>
<%= form.input :email_notifications %>
<h5>Cambiar contraseña</h5>
<p>Si no quieres cambiar la contraseña, deja estos campos en blanco.</p>
<%= form.input :password %>
<%= form.input :password_confirmation %>
<%= admin_area do %>
  <%= form.input :admin %>
  <%= form.input :watcher %>
<% end %>
<div class="submit alert alert-success">
  <%= form.submit 'Actualizar perfil' %>
</div>
<% if can?(:delete, user) %>
  <div class="alert alert-error">
    <p>Puedes borrar este usuario, pero hazlo por un buen motivo</p>
    <%= link_to 'Borrar', user, method: :delete, class: 'action', 
      data: { confirm: '¿SEGURA?', action: 'delete-user' } %>
    </p>
  </div>
<% end %>

  <% end %>
