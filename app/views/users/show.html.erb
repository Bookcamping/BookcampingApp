<% title user.name %>
<%= content_tag_for :article, user do %>
  <%= render 'header' %>

<% if user.recommendations_count > 0 %>
  <h3>Recomendados por <%= user.name %></h3>
<div class="references">
  <%= render user.recommended.limit(10) %>
</div>
<% end %>

<% if user.references.all.count > 0 %>
  <h3>Subidos por <%= user.name %></h3>
<div class="references">
  <%= render user.references.order('created_at DESC').limit(10) %>
</div>
<% end %>
<% end %>

<%= content_for :left do %>
  <%= render 'left' %>
<% end %>

<%= content_for :right do %>
  <%= render 'right' %>
<% end %>
