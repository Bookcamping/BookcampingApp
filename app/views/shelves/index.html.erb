<% title "#{library.shelf_name}s" %>
<%= div_for library do %>
  <div class="header">
  <div class="count">
    <%= pluralize(library.shelves.count, "#{library.shelf_name}s") %>
  </div>
  <h1><%= link_to library.name, root_path %></h1>
  <p>Estas son las <%= library.shelf_name %>s de <%= library.name %>.
</div>

<table class="shelves">
  <%= render library.shelves %>
</table>

<%= content_for :right do %>
  <div class="header">
  <h4>Actividad reciente</h4>
</div>
<%= render library.versions.reorder('id DESC').limit(10) %>
<% end %>
