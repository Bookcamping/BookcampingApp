<%= div_for shelf, class: 'item' do %>
  <div class="before"></div>
  <div class="after" style="background-color: <%= shelf.color %>" >
    <span class="references"><%= icon('book', shelf.references_count) %></span>
  </div>
  <div class="shelf-content">
    <h2><%= link_to shelf.name, view_shelf_path(shelf, (defined?(reference) ? reference : nil)) %>
  </div>
<% end %>
