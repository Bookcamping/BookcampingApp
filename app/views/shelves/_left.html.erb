<%= right_arrow_link_to t('shelves.new_reference'), 
  new_shelf_item_path(s: shelf) %>
<% if shelf.description? %>
  <div class="hand"></div>
<% end %>
<% if shelf.description? %>
  <div class="black">
    <%= markdown shelf.description %>
  </div>
  <div class="curtain"></div>
<% end %>

<div class="shelf_view">
  <h5>Ver como...</h5>
  <a href="#" id="as_list"><i class="icon-list"></i> Como lista</a>
  <a href="#" id="as_icons"><i class="icon-th"></i> Como iconos</a>
</div>

<div class="editors">
<h5>Participan en esta estanter√≠a...</h5>
<% shelf.editors.order('count DESC').each do |editor| %>
  <%= link_to editor.user, data: { editor: true, user_id: editor.user.id } do %>
    <%= avatar_img(editor.user) %> <%= editor.user.name %> (<%= editor.count %>)
  <% end %>
<% end %>
</div>
