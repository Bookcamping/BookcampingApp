<header id="page_header" class="container">
  <div class="bar">
    <div class="right end">&nbsp;</div>
    <div class="left end">&nbsp;</div>
    <div class="bar-contents">
      <div class="session">
        <% if current_user %>
          <%= content_tag_for :p, current_user do %>
          Hola <%= link_to current_user.name, current_user %><%= '*' if current_user.admin? %> |
        <%= link_to 'Salir', logout_path(from: request.url) %>
      <% end %>
      <% else %>
          <p><%= link_to 'Entrar', login_path(from: request.url) %></p>
      <% end %>
      </div>
      <div class="search span3">
        &nbsp;
      </div>
      <div class="tabs">
        <% Site.tabs.reverse.each do |tab| %>
          <%= link_to tab.label, tab.path %>
      <% end %>
      </div>
    </div>
  </div>

  <div class="banner row">
    <div class="span3 logo">
      <% if current_library && current_library.logo.present? %>
        <%= link_to(image_tag("logos/#{current_library.logo}", class: 'logo'), root_path) %>
    <% else %>
        <%= link_to(image_tag("logos/bookcamping.png", class: 'logo'), root_path) %>
    <% end %>
    </div>
    <div class="span9">
      <%= render 'layouts/campings_header' %>
      <div class="slogans">
        <% if current_library && current_library.slogan.present? %>
          <span class="slogan small"><%= current_library.slogan %></span>
        <span class="slogan big"><%= current_library.question %></span>
      <% else %>
          <span class="slogan small"><%= t('site.slogan') %></span>
        <span class="slogan big"><%= t('site.question') %></span>
      <% end %>
      </div>
    </div>
  </div>
</header>
